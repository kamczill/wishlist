{% comment %}
  Shopify Wishlist
  Usage:
    - Markup: {%- render 'button-wishlist', product: product -%}
    - Place this snippet inside your existing product card snippet

  Parameters:
    - product: <Shopify product> (required)
{% endcomment %}
{%- if product.handle != blank -%}
    <button type="button" aria-label="Add to wishlist" class="wishlist__button" button-wishlist data-product-handle="{{ product.handle }}">
      <style scoped>
        .wishlist__button{
          position: absolute;
          display: flex;
          justify-content: center;
          align-items: center;
          top: 1rem;
          right: 1rem;
          background: #f5f5f5;
          {% comment %} background: none; {% endcomment %}
          border: none;
          border-radius: 25px;
          cursor: pointer;
          z-index: 2;
          padding: .5rem;
        }

        .icon-heart {
          width: 25px;
          fill: transparent;
          stroke-width:15px;
          stroke: #000000;
          transition: fill 0.3s ease;
        }
  
        .active .icon-heart {
          fill: black;
          stroke: #000000;
        }
      </style>
      {%- render 'icon-heart', class: product -%}
    </button>
  {%- endif -%}